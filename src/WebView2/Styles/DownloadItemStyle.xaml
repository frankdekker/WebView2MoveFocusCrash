<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Download.Item.Grid" TargetType="Grid">
        <Setter Property="Background" Value="#f0f0f0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background" Value="#dddddd" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="Download.Item.State" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#5A5A5A"/>
        <Setter Property="FontSize" Value="9"/>
    </Style>
    <Style x:Key="Download.Item.Separator" TargetType="Border">
        <Setter Property="BorderThickness" Value="0 5 0 5"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Background" Value="#C5C7C8"/>
    </Style>
</ResourceDictionary>